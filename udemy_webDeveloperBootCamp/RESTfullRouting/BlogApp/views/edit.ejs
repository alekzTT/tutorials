<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
        <form class ="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>title</label>
                <input  type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="field">
                <label>image</label>
                <input  type="text" name="blog[image]" value="<%= blog.image%>" disabled>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]" placeholder="blog post goes here"><%= blog.body %></textarea>
            </div>
            <div class="field">
                <input class ="ui purple basic button" type="submit"></input>
            </div>
        </form>
</div>


<% include ./partials/footer %>
