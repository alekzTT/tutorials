<% include partials/header%>

<div class="container">
    <header class ="jumbotron">
        <div class="container">
            <h1>Wellcome to Yelp Camp</h1>
            <p>Handpicked campgrounds from all over the world, strict criteria, great places to visit.</p>
            <p>
                <a class = "btn btn-primary btn large" href="/campgrounds/new"> Add new Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row" style="display:flex; flex-wrap: wrap;">  <!-- orelse Grid breaks, grid addapts -->
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src="<%=camp.image;%>">
                    <div class="caption">
                        <h4><%=camp.name;%></h4>
                    </div>
                </div>
            </div> 
        <% }); %>
    </div>
    
    <% include partials/footer%>
    
</div>